<div class="container pad20">
  <!-- Heading -->
  <h1 class="text-underline text-brand">Delicious cocktails</h1>

    <!-- Grid row -->
  <div class="row">
    <!-- Card -->
    <% @cocktails.each do |cocktail| %>

      <div class="col-xs-12 col-sm-4">
          <div class="card-description">
            <%= image_tag "beverage-mojito.jpg", alt: "beverage", width: 200 %>

            <h2> <%= cocktail.name  %> </h2>

              <%= link_to "Details", cocktail_path(cocktail), class: "card-link" %>

          </div>
      </div>
    <% end %>

  </div>
</div>
